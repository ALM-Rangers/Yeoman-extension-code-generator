{
  "manifestVersion": 1,
  "id": "<%= ExtensionID %>",
  "version": "0.1.0",
  "name": "<%= ExtensionName %>",
  "scopes": ["vso.work"],
  "description": "<%= Description %>",
  "publisher": "<%= PublisherId %>",
  "galleryFlags": [
    "Preview"
  ],
  "icons": {
    "default": "static/images/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "demands": [
    "api-version/3.0"
  ],
  "tags": [
    "Sample"
  ],
  "screenshots": [
    {
      "path": "static/images/screen1.png"
    }
  ],
  "content": {
    "license": {
      "path": "license.md"
    },
    "details": {
      "path": "overview.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://bit.ly"
    },
    "support": {
      "uri": "https://bit.ly"
    },
    "issues": {
      "uri": "https://bit.ly"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://bit.ly"
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "static/images/logo.png",
      "addressable": true
    },
    {
      "path": "static/css/app.css",
      "addressable": true
    },
    {
      "path": "static/index.html",
      "addressable": true
    },
     {
      "path": "static/configuration.html",
      "addressable": true
    },
    {
      "path": "node_modules/vss-web-extension-sdk/lib",
      "addressable": true,
      "packagePath": "lib"
    }
  ],
  "categories": [
    "Integrate"
  ],
  "contributions": [
    {
      "id": "<%= WidgetId %>",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog",
        ".<%= WidgetId %>-Configuration"
      ],
      "properties": {
        "name": "<%= WidgetFriendlyName %>",
        "description": "<%= WidgetDescription %>",
        "uri": "static/index.html",
        "isNameConfigurable": true,
        "catalogIconUrl:": "static/images/logo.png",
        "previewImageUrl": "static/images/logo.png",
        "supportedSizes": [
          {
            "rowSpan": 1,
            "columnSpan": 2
          },
          {
            "rowSpan": 2,
            "columnSpan": 2
          }
        ],
        "supportedScopes": [
          "project_team"
        ]
      }
    },
    {
      "id": "<%= WidgetId %>-Configuration",
      "type": "ms.vss-dashboards-web.widget-configuration",
      "targets": [
        "ms.vss-dashboards-web.widget-configuration"
      ],
      "properties": {
        "name": "<%= WidgetFriendlyName %> Configuration",
        "description": "<%= WidgetDescription %>.",
        "uri": "static/configuration.html"
      }
    }
  ]
}